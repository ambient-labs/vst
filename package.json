{
  "name": "ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "dev": "npm run dev-native && concurrently \"npm run dev-dsp\" \"vite\"",
    "dev-native": "zx scripts/build-native.mjs --dev",
    "dev-dsp": "esbuild dsp/main.js --watch --bundle --outfile=public/dsp.main.js",
    "build-native": "zx scripts/build-native.mjs",
    "build-dsp": "esbuild dsp/main.js --bundle --outfile=public/dsp.main.js",
    "build-ui": "vite build",
    "build": "npm run build-dsp && npm run build-ui && npm run build-native",
    "preview": "vite preview",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "dependencies": {
    "@elemaudio/core": "^3.0.0",
    "@heroicons/react": "^2.0.18",
    "@use-gesture/react": "^10.2.27",
    "cpy-cli": "^4.2.0",
    "esbuild": "^0.17.8",
    "invariant": "^2.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^5.0.0",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "eruda": "^3.4.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.4.24",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.9.3",
    "vite": "^4.3.9",
    "vitest": "^4.0.9",
    "zx": "^7.2.3"
  }
}
