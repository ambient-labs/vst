{
  "name": "@srvb/root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "pnpm run build:native:clean && pnpm run build:dsp:clean && pnpm run build:ui:clean",
    "predev": "pnpm run clean",
    "prebuild": "pnpm run clean",
    "dev": "pnpm run dev-native && concurrently \"pnpm --filter @srvb/dsp dev\" \"pnpm --filter @srvb/frontend dev\"",
    "dev-native": "zx scripts/build-native.mjs --dev",
    "build-native": "wireit",
    "build-dsp": "wireit",
    "build-ui": "wireit",
    "build": "wireit",
    "build:native:clean": "rimraf native/build",
    "build:dsp:clean": "rimraf packages/frontend/public/dsp.main.js",
    "build:ui:clean": "rimraf packages/frontend/dist",
    "preview": "pnpm --filter @srvb/frontend preview",
    "setup-pluginval": "wireit",
    "test:integration": "wireit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "deepsource:install": "curl https://deepsource.io/cli | sh",
    "deepsource": "export $(cat .env | xargs) && ./bin/deepsource report --analyzer javascript",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm deepsource"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "wireit": {
    "build": {
      "command": "pnpm run build-dsp && pnpm run build-ui && pnpm run build-native"
    },
    "build-dsp": {
      "command": "pnpm --filter dsp build",
      "files": [
        "packages/dsp/**/*.{js,ts}"
      ],
      "output": [
        "packages/frontend/public/dsp.main.js"
      ]
    },
    "build-ui": {
      "command": "pnpm --filter frontend build",
      "files": [
        "packages/frontend/**/*.{js,ts}"
      ],
      "output": [
        "packages/frontend/dist/**"
      ]
    },
    "build-native": {
      "command": "zx scripts/build-native.mjs",
      "files": [
        "native/**/*.{cpp,h}",
        "native/CMakeLists.txt",
        "scripts/build-native.mjs"
      ],
      "output": [
        "native/build/scripted/SRVB_artefacts/**"
      ]
    },
    "setup-pluginval": {
      "command": "tsx scripts/pluginval/setup.ts",
      "files": [
        "scripts/pluginval/setup.ts",
        "scripts/pluginval/config.json"
      ],
      "output": [
        "node_modules/.cache/pluginval/**"
      ]
    },
    "test:integration": {
      "command": "vitest run --config vitest.integration.config.ts"
    }
  },
  "dependencies": {
    "cpy-cli": "^4.2.0",
    "rimraf": "^5.0.0"
  },
  "devDependencies": {
    "@elemaudio/core": "^4.0.1",
    "@elemaudio/offline-renderer": "^4.0.3",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "invariant": "^2.2.4",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.24",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.3.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9",
    "wireit": "^0.14.12",
    "zx": "^7.2.3"
  }
}
